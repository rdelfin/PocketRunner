<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:key="use_distance"
        android:title="@string/use_distance"
        android:defaultValue="true"
        android:summary="@string/use_distance_summary" />

    <EditTextPreference
        android:dependency="use_distance"
        android:key="distance_for_alarm"
        android:title="@string/distance"
        android:defaultValue="10"
        android:selectAllOnFocus="true"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:maxLines="1"/>

    <EditTextPreference
        android:key="time_hours_for_alarm"
        android:title="@string/time_hours"
        android:defaultValue="1"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:singleLine="true"
        android:maxLines="1"/>

    <EditTextPreference
        android:key="time_minutes_for_alarm"
        android:title="@string/time_minutes"
        android:defaultValue="1"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:singleLine="true"
        android:maxLines="1"/>

    <EditTextPreference
        android:key="time_seconds_for_alarm"
        android:title="@string/time_seconds"
        android:defaultValue="0"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:singleLine="true"
        android:maxLines="1"/>

</PreferenceScreen>
