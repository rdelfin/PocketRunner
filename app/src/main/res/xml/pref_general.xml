<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="lap_length_input"
        android:title="@string/lap_length"
        android:defaultValue="0"
        android:selectAllOnFocus="true"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:maxLines="1" />

    <ListPreference
        android:key="units_list"
        android:title="@string/units_title"
        android:defaultValue="Meters"
        android:entries="@array/units_list_vals"
        android:entryValues="@array/units_list_vals"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

</PreferenceScreen>
