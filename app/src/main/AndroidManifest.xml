<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.foxtailgames.pocketrunner" >
    <!-- ******************** PERMISIONS **************************** -->
    <uses-permission android:name="android.permission.VIBRATE"/>

    <!-- ****************** APPLICATION ***************************** -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.foxtailgames.pocketrunner.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.foxtailgames.pocketrunner.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.foxtailgames.pocketrunner.MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.foxtailgames.pocketrunner.MainActivity" />
        </activity>
        <activity
            android:name="com.foxtailgames.pocketrunner.RunActivity"
            android:label="@string/title_activity_run"
            android:parentActivityName="com.foxtailgames.pocketrunner.MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.foxtailgames.pocketrunner.MainActivity" />
        </activity>
    </application>

</manifest>
